    <div class="hostForm" >
        <h2>Add your space here.</h2>
        <form id="static-form" method="POST" enctype="multipart/form-data" action="/space/add" >
            <div class='form-row'>
                <div class="form-group col-md-12" id="spaceNameD">
                    <input name="spaceName" id="spaceName" type="text"  class="full-width-input form-control" placeholder="Space name" value="" aria-describedby="basic-addon1">
                </div>  
            </div>  
             <div class='form-row'>
                <div class="form-group  col-md-4" id="lengthD">
                     <input name="length" id="length" type="number"   class="full-width-input form-control" placeholder="Length" value="" aria-describedby="basic-addon1">        
                </div>  
                <div class="form-group  col-md-4" id="widthD">
                    <input name="width"  id="width" type="number"  class="full-width-input form-control" placeholder="Width" value="" aria-describedby="basic-addon1">
                </div>  
                <div class="form-group  col-md-4" id="heightD">
                    <input name="height" id="height" type="number"   class="full-width-input form-control" placeholder="Height" value="" aria-describedby="basic-addon1">
                </div>  
            </div>  
             <div class='form-row'>
                <div class="form-group  col-md-12"  id="priceD">
                     <input name="price" id="price" type="number"   class="full-width-input form-control" placeholder="price" value="" aria-describedby="basic-addon1">
                </div>  
            </div> 
            <div class='form-row'>
                <div class="form-group  col-md-12" id="streetAddressD">
                     <input type="text" class="full-width-input form-control"  name="streetAddress" id="streetAddress" placeholder="Enter street address">
                </div>  
            </div> 
             <div class='form-row'>
                <div class="form-group  col-md-4" id="cityD">
                    <input type="text" class="full-width-input form-control"  name="city" id="city" placeholder="Enter city">
                </div>  
                <div class="form-group  col-md-4" id="stateD">
                   <input type="text" class="full-width-input form-control"  name="state" id="state" placeholder="state">
                </div>  
                <div class="form-group  col-md-4" id="zipD">
                    <input type="number" class="full-width-input form-control"  name="zip" id="zip" placeholder="zip">
                </div>  
            </div>  
             <div class='form-row'>
                <div class="form-group  col-md-6" id="longitudeD">
                    <input type="text" class="full-width-input form-control"  name="longitude" id="longitude" placeholder="Enter longitude">
                </div>  
                <div class="form-group  col-md-6" id="latitudeD">
                    <input type="text" class="full-width-input form-control"  name="latitude" id="latitude" placeholder="Enter latitude">
                </div>                 
            </div>  
             <div class='form-row'>
                <div class="form-group  col-md-12" id="descriptionD">
                   <textarea name="description" class="form-control" id="description" cols="74" rows="6" placeholder="Say something..." value=""></textarea>
                </div>  
            </div>  
            <div class='form-row'>
                <div class="form-group  col-md-12">
                  <span>Choose photos</span>
                <input name="upload" id="addImg" type="file" accept="image/jpg, image/png, image/jpeg, image/gif, image/tiff" multiple>
                </div>  
                <p style="margin-top: 3px; color:blue" id="images"></p>  
            </div>  
           
            <div class="form-group">
                 {{!-- <input id="addNewPostButton" name="submit" type="button" class="btn AllButton" value="Submit" > --}}

                <button id="addNewPostButton" name="submit" value="Submit" class="btn btn-primary btn-block" type="button">Add space</button>
                </div>
        </form>       
                  

    </div>
    
</div>
  <script>
      
var file = document.getElementById('addImg')

var fileCount = 0;
//$('#images').hide();
var form = document.getElementById('static-form');

      if(form){
          var formData = new FormData(form);
      }
file.onchange = function () {
    alert(this.files.length);
    for (let i = 0; i < this.files.length; i++) {
        formData.append('photo' + i, this.files[i]); // add photos' path to formData
        fileCount ++;
    }
      if(fileCount > 3){
           e.preventDefault();
        $('#images').text('You can upload maximum upto 3 images.');
        $('#images').show();
    } else if(fileCount === 0){
        e.preventDefault();
        $('#images').text('Please upload atleast one image it will help user to book space.');
        $('#images').show();
    }
};
  </script>

            