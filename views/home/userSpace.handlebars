<div class="contentBox">
<div class="container-fluid bg-3 landingPage">  
    <div class="row">  
    <div class="col-sm-12">
        <p> Spaces hosted by you.!</p>
    </div>
    
    </div>

  <div class="row">
       {{#each spaceList}}   
                <div class="col-sm-3">
                    <div class="panel">
                        <div class="row">
                            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        {{#each photoArray}}
                                                {{#if @first}}
                                                    <div class="carousel-item active">
                                                    <img class="d-block w-100" src={{this}} alt="First slide">
                                                    </div>
                                            {{else}}
                                                    <div class="carousel-item">
                                                    <img class="d-block w-100" src={{this}} alt="Second slide">
                                                    </div>
                                            {{/if}}
                                        {{/each}}                      
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                              </div>
                     </div>
                            <div class="row" onClick="divFunction('{{this._id}}')">
                                <div class="col-sm-6 panel-heading">{{this.spaceName}}</div>
                                    <div class="col-sm-6 rating">
                                        <p >{{this.rating}}/5</p>
                                        <p hidden class="spaceId">{{this._id}}</p>
                                        <p class="starRate">{{this.rating}}</p>                   
                                    <span class='stars'></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <div >${{this.price}}/Night</div>
                                        <div >{{this.address.city}}</div>
                                        <div>Space Dimension: {{spaceDim.length}} x {{spaceDim.width}} x {{spaceDim.height}}</div>
                                    </div>
                                   
                            </div>
                            <div class="row" >   
                                  <div class='col-xs-6'></div>                             
                                    <div class='col-xs-6'>
                                    <div class="row">
                                            <div class='col-xs-4'>
                                            <a href="/space/host/{{this._id}}"> <span class="glyphicon glyphicon-pencil"></span></p> </a>  
                                            </div>
                                            <div class="col-xs-4">
                                            <a href="/space/remove/{{this._id}}"> <span class="glyphicon glyphicon-trash"></span></a>
                                            </div>
                                     </div>
                                    </div>                                                      
                            </div>
                        </div>
               </div>
        
       {{/each}}
  </div>
</div>
</div>

