
{{#if hasError}}
<h1 class="error">{{error}}.</h1>
{{/if}}

<div class="login-dark">
    <div  id="backgroundImage">
        <img src="/public/images/LoginPage.jpeg" />
    </div>
    
    <form action="/user/login" method="POST" id="login-form" autocomplete="off">

        <div class="illustration"><i class="bi bi-lock"></i></div>
        <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Email"></div>
        <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password"></div>
        <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Log In</button></div><a href="/user/signup" class="forgot">Not a member?Sign Up</a>
        </form>
</div>
